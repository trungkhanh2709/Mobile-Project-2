<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnPhim_Thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Phim" />

            <RadioButton
                android:id="@+id/btnDienVien_Thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diễn Viên" />

            <RadioButton
                android:id="@+id/btnDaoDien_Thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đạo diễn" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtSearch_Thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:hint="Nhập từ khóa tìm kiếm"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/lvResult_Thu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/edtSearch_Thu"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</FrameLayout>